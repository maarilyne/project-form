{
  "compilerOptions": {
    "lib": [
      "dom",
      "es2016"
    ],
    "sourceMap": true,
    "strict": true,
    "noImplicitAny": false,
    "module": "esnext",
    "target": "esnext",
    "jsx": "react",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "baseUrl": "src",
    "allowJs": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": false
  },
  "include": [
    "src"
  ]
}
